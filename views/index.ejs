<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Shortner</title>
    <style>
        body{
            background-color: antiquewhite;
            box-sizing: border-box;
        }
        .container{
background-color: white;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
padding: 4rem;
width: 80%;
height: 80vh;
margin: auto;
        }
        table{
            /* background-color: green; */
            border: 2px solid rgb(199, 194, 194);
            border-collapse: collapse;
            width: 100%;
            overflow-x: visible;
        }
        table thead th, td{
            /* border: 2px solid black; */
            padding: 1rem;
            text-align: left;
            
        }
        table thead th{
            background-color: blanchedalmond;
            border-collapse: collapse;
            /* border-collapse: separate; */

        }
        table tr:hover{
            background-color: gainsboro;
        }

        form{
            padding: 2rem;
        }

        form input, form button{
            padding: 0.5rem 1.5rem;
        }

        .fa-solid{
            cursor: pointer;
            /* color: bisque; */
        }
        .fa-solid:hover{
            color: white;
        }

    </style>
</head>
<body>
    <div class="container">

    <form action="/" method="POST">

        <input type="url" placeholder="Enter Link" name="url" required>
      
<button type="submit">shortend</button>
    </form>

    <table class="containerw">
        <thead>
          <tr>
            <th>
                Full Url
            </th>
            <th>
                Short Url
            </th>
            <th>
                count
            </th>
            <th>Action</th>
          </tr>  
          <tbody>
            <% shortUrls.forEach(url => {%>
                <tr>
                    <td class="btn-primary"><a href="<%=url.originalUrl  %>"><%=url.originalUrl %></a></td>
                    <td><a href="/short/<%= url.shortUrl%>" target="_blank"><%= url.shortUrl %></a></td>
                    <td><%= url.clicks %></td>
                    <td><i class="fa-solid fa-trash"><a href="/delete/<%= url._id%>"></a></i></td>
                </tr> 
            <%  }); %>
            
          </tbody>
        </thead>
    </table>
</body>
</html>